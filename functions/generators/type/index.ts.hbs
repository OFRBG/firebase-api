// @format
import {register} from '../registry';

import {readable} from './fields';
import {model, schema} from './type';
import {rootConnection, connection} from './relay/connection';
import {setter, updater, getter, deleter} from "./resolvers";
import {collectionName} from './resolvers/resolvers';

/* Query field name for the type */
const name = '{{ rootName }}';

/**
 * Pack the readable fields, the resolvers, and the GraphQL model
 * to use them with other types
 */
register({
  name,
  data: {
    collectionName,
    connection,
    deleter,
    getter,
    model,
    readable,
    rootConnection,
    schema,
    setter,
    updater
  }
});
